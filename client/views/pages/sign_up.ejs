<div class="panels-w-3 panels">
	<form class="panel" method="POST">
		<div class="title center panel-row">Sign up</div>
		<div class="left panel-row"><label for="email">Email</label></div>
		<div class="panel-row"><input class="input" name="email" type="email" placeholder="Email"></div>
		<div class="left panel-row"><label for="password">Password</label></div>
		<div class="panel-row"><input class="input" name="password" type="password" placeholder="Password"></div>
		<div class="left panel-row"><label for="confirm_password">Confirm password</label></div>
		<div class="panel-row"><input class="input" name="confirm_password" type="password" placeholder="Confirm password"></div>
		<div class="center panel-row"><input class="button" type="submit" value="Sign up"></div>
		<div><hr></div>
		<div class="left panel-row"><label>Already have an account?</label></div>
		<div class="left panel-row"><a href="/sign-in">Sign in</a></div>
	</div>
</div>