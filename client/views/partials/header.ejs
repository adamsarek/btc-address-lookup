<header>
	<a class="header-logo" href="/"></a>
	<div class="search-panel"></div>
	<form action="/search" class="search-bar">
		<a class="search-logo" href="/"><%= title %></a>
		<input class="search-bar-input" name="q" type="search" placeholder="Search BTC address" value="<%= typeof address !== 'undefined' ? address : '' %>" minlength="1" maxlength="512" required <%= (typeof address !== 'undefined') || (typeof page !== 'undefined' && typeof page.file !== 'undefined' && page.file != 'index') ? '' : 'autofocus' %>>
		<!--<input class="search-bar-submit" type="submit" value="🔍">-->
	</form>
	<div class="header-right">
		<button class="nav-button">menu</button>
		<nav>
			<a href="/addresses">Addresses</a>
			<a href="/statistics">Statistics</a>
			<a href="/api">API</a>
			<a href="/faq">FAQ</a>
			<a class="header-sign-in button" href="/<%= typeof account !== 'undefined' ? 'account' : 'sign-in' %>"><%= typeof account !== 'undefined' ? 'Account' : 'Sign in' %></a>
		</nav>
	</div>
</header>